<div class="container">
  <div class="header">
    <h1>All Articles:</h1>
    <div id="add_new"><%= link_to "Add new Article", new_path, :class => "btn btn-primary" %></div>
  </div>

  <ul class="list-group">

    <% @articles.each do |article| %>
    <li class="list-group-item">
      <%= link_to article.title, article_path(article) %>
      <%= link_to article_path(article),
                        method: :delete,
                        data: {confirm: "Are you sure?"} do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      <p><%= article.content %></p>
    </li>

    <% end %>

  </ul>

</div>
